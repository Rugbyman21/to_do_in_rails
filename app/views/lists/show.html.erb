<h1><%= @list.name %></h1>

<% if @list.tasks.any? %>
  <h4>Here are the tasks for this list:</h4>

  <ul>
    <% @list.tasks.each do |task| %>
      <li>
        <%= task.description %> |
        Is this task done? <b><%= task.done %></b> |
        <%= link_to 'Edit this Task', edit_list_task_path(@list, task) %> |
        <%= link_to 'Delete this Task', list_task_path(@list, task),
                              :data => {:confirm => "Are you sure?",
                                                  :method => "delete"} %>
      </li>
      <% end %>
  </ul>

  <p>Done:</p>
  <% @done.each do |task| %>
    <li>
      <%= task.description %>
      Is this task done? <b><%= task.done %></b>
    </li>
  <% end %>

  <p>Not Done:</p>
  <% @not_done.each do |task| %>
    <li>
      <%= task.description %>
      Is this task done? <b><%= task.done %></b>
    </li>
  <% end %>

  <% else %>
    <p>There are no tasks yet!</p>
  <% end %>

<p><%= link_to "Add a task", new_list_task_path(@list) %></p>
<p><%= link_to "Edit this List", edit_list_path(@list) %></p>
<p><%= link_to "Delete this List", list_path(@list),
                         :data => {:confirm => "You sure?",
                                   :method => "delete"} %></p>
<p><%= link_to "Return to Lists", lists_path %></p>
